# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,py,php,inc,ini}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab


# 4 space indentation
[*.{php,inc,ini}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{html,htm}]
indent_style = space
indent_size = 2
